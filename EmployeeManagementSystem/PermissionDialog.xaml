<Window x:Class="EmployeeManagementSystem.PermissionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Permission Required" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Please enter the password to enable EGN editing:" Margin="0,0,0,10"/>
            <PasswordBox Name="passwordBox" Margin="0,0,0,10"/>
            <Button Content="Submit" Click="OnSubmitClick" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
