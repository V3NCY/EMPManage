<Window x:Class="EmployeeManagementSystem.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagementSystem"
        mc:Ignorable="d"
        Title="ТРЗORAK Календар" WindowState="Maximized" Background="#F0F4FA">

    <Window.Resources>
        <Style x:Key="TaskStyle" TargetType="Border">
    <Setter Property="Background" Value="#E3F2FD" />
    <Setter Property="BorderBrush" Value="#4A90E2" />
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="Margin" Value="5" />
    <Setter Property="Padding" Value="10" />
    <Setter Property="CornerRadius" Value="5" />
    <Setter Property="Effect">
        <Setter.Value>
            <DropShadowEffect Color="#999999" Opacity="0.2" BlurRadius="8" />
        </Setter.Value>
    </Setter>
</Style>

        <!-- Style for Calendar Day Cells -->
        <Style x:Key="CalendarDayStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#DADADA" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="5" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styles for Task Categories -->
        <Style x:Key="PersonalTaskStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFD1DC" />
            <Setter Property="BorderBrush" Value="#FF5C77" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

        <Style x:Key="WorkTaskStyle" TargetType="Border">
            <Setter Property="Background" Value="#D1F0FF" />
            <Setter Property="BorderBrush" Value="#5C9DFF" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

        <Style x:Key="UrgentTaskStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFD9B3" />
            <Setter Property="BorderBrush" Value="#FF6E00" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

    </Window.Resources>

    <DockPanel Margin="20">
        <!-- Header Section -->
        <TextBlock Text="ТРЗORAK Календар" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" DockPanel.Dock="Top" Margin="0,0,0,20" />

        <!-- Calendar Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Day Headers -->
            <UniformGrid Rows="1" Columns="7" Grid.Row="0">
                <TextBlock Text="Sunday" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#4A90E2" />
                <TextBlock Text="Monday" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#4A90E2" />
                <TextBlock Text="Tuesday" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#4A90E2" />
                <TextBlock Text="Wednesday" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#4A90E2" />
                <TextBlock Text="Thursday" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#4A90E2" />
                <TextBlock Text="Friday" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#4A90E2" />
                <TextBlock Text="Saturday" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#4A90E2" />
            </UniformGrid>

            <!-- Calendar Days -->
            <UniformGrid x:Name="CalendarGrid" Rows="6" Columns="7" Grid.Row="1" Margin="5">
                <!-- Day cells will be dynamically added in the code-behind -->
            </UniformGrid>
        </Grid>
    </DockPanel>
</Window>