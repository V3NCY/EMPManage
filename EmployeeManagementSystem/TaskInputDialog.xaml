<Window x:Class="EmployeeManagementSystem.TaskInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Task" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Task Description:" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="TaskDescriptionBox" FontSize="14" Margin="0,0,0,15"/>

        <TextBlock Text="Select Column:" FontSize="14" Margin="0,0,0,5"/>
        <ComboBox x:Name="ColumnSelectionBox" FontSize="14" Margin="0,0,0,15">
            <ComboBoxItem Content="To Do"/>
            <ComboBoxItem Content="In Progress"/>
            <ComboBoxItem Content="Done"/>
        </ComboBox>

        <Button Content="Add Task" Width="100" Height="30" HorizontalAlignment="Right" Click="AddTaskButton_Click"/>
    </StackPanel>
</Window>
